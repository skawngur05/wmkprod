        const installDate = new Date(lead.installation_date!);
        const today = new Date();
        const isCompleted = installDate <= today;
        
        if (isCompleted) {
          acc[installer].completedInstallations += 1;
        } else {
          acc[installer].pendingInstallations += 1;
        }
        
